{% extends "layout.njk" %}

{% block content %}

{% import "parts/card.njk"  as card %}

{% call card.render('Esqueceu a senha?', 'password container form') %}

    <form method="POST" action="/users/forgot-password">
        
        <div class="fields">
            <div class="item">
                <div>Email</div>
                <div class="input">
                    <input 
                        type="email"
                        name="email"
                        placeholder="Digite seu email"
                        value=""{{user.email}}"
                        onblur="Validate.apply(this, 'isEmail')"
                    >
                </div>
            </div>
        </div>

        <button type="submit" class="button">Recuperar senha</button>

    </form>
{% endcall %}

{% endblock content %}