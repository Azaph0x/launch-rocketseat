{% extends "layout.njk" %}
{% import "parts/card.njk" as cards %}

{% block content %}
  {% call cards.render("", "order-success container") %}
    <div class="success-lotie"> </div>
    <h2>Pedido Realizado com sucesso!</h2>
    <p>
        Aguarde a resposta do vendedor no seu e-mail cadastrado.
    </p>
    <a href="/products/search">Comprar mais</a>
  {% endcall%}
    <script src="js/lottie.js" type="text/javascript"></script>
    <script>
      const element = document.querySelector('.success-lotie')
      lottie.loadAnimation({
        container: element, // the dom element that will contain the animation
        renderer: 'svg',
        loop: false,
        autoplay: true,
        path: '/97240-success.json' // the path to the animation json
      });
    </script>
{% endblock %}